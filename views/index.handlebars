
    <br>
    <div class="container">
        <h2 class="text-danger text-center logo">Eat-da-burger!!</h3>
        <br>
     <div class="row">
        <div class="col-md-4">
        </div>
          <div class="col-md-4">
            <img src="/assets/images/burger.png" class="mx-auto d-block" style="background-color:#ffe875;" width="120"
            height="120" alt="Burger-Image">
          </div>
       <div class="col-md-4">
       </div>
     </div>
     <br>
     
     <div class="row">
         <div class="col-md-3 text-center">
                <!-- burgers from database which are not devoured -->
             <h5 class="headers text-secondary">Burgers To be Eaten</h5>
             <br>
                {{#each burger}}
                {{#unless devoured}}
                   <ul class="burger-names">
                     {{this.burger_name}}
                     <button class="devour btn btn-primary btn-sm" data-id="{{this.id}}">Devour!</button>
                   </ul>
                {{/unless}}
                {{/each}}
         </div>

         <div class="col-md-6 text-center">
             <!-- text area to add the burgers -->
             <h5 class="headers text-secondary">Enter the burger you would like to eat!</h5>
             <br>
             <form class="add-burger">
            <textarea class="form-control" id="burger-name" rows="5" id="comment"></textarea>
            <br>
            <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
         </div>
         <div class="col-md-3 text-center">
             <!-- burgers which are devoured -->
            <h5 class="headers text-secondary">Burgers Devoured</h5>
            <br>
              {{#each burger}}
              {{#if devoured}}
                 <ul class="burger-names">
                     {{this.burger_name}}
                 </ul>
             {{/if}}
             {{/each}}
         
         </div>
     </div>
    </div>

